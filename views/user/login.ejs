<div class="container">
    <div class="row">
        <div class="col-md-push-3 col-md-6">
            <form role="form" action="/login" method="post">
                <input type="hidden" name="_csrf" value="<%= _csrf %>">
                <div class="form-group">
                    <label for="loginInputUsername">用户名</label>
                    <input type="text" class="form-control" id="loginInputUsername" placeholder="请输入用户" required name="name">
                </div>
                <div class="form-group">
                    <label for="loginInputPasswd">密码</label>
                    <input type="password" class="form-control" id="loginInputpasswd" placeholder="请输入密码" required name="passwd">
                </div>
                <button type="submit" class="btn btn-default">登录</button>
            </form>
        </div>
    </div>
</div>